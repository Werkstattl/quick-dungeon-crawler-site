---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/blog/">Blog</a>
    </li>
    <li class="menu-item">
      <a href="/about">About</a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <a href="/blog/rss.xml" aria-label="Subscribe to RSS">
        <Icon name="lucide:rss" />
        <span class="sr-only">Subscribe to the RSS feed</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
          <a href="https://www.reddit.com/r/QuickDungeonCrawler/">
            <Icon name="fa-brands:reddit" />
            <span class="sr-only">Go to the Reddit subreddit</span>
          </a>
        </li>
    <li class="menu-item type-icon animate-rotate">
      <a href="https://github.com/Werkstattl/quick-dungeon-crawler-rpg-od">
        <Icon name="lucide:github" />
        <span class="sr-only">Go to the GitHub page</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>

---

/**
 * CallToAction Component
 *
 * @description A prominent call-to-action section with a title and link
 */
interface Props {
  /**
   * The title text to display
   * @default "Get this theme on GitHub"
   */
  title?: string
  /**
   * The URL the button should link to
   * @default "https://github.com/incluud/accessible-astro-starter"
   */
  link?: string
  /**
   * The text to display on the button
   * @default "Get Started"
   */
  linkText?: string
}

const {
  title = 'Download Quick Dungeon Crawler for free',
  link = 'https://play.google.com/store/apps/details?id=com.thomaspeissl.quick_dungeon_crawler_od.twa',
  linkText = 'Get Quick Dungeon Crawler on Google Play',
} = Astro.props
---

<div class="container">
  <div class="call-to-action mt-24 mb-32 flex flex-col items-center gap-12 rounded-xl px-12 py-20 md:px-24">
    <h2 class="text-center text-3xl md:text-6xl">{title}</h2>
    <p class="max-w-prose text-center">No ads · Offline play · 100% open-source</p>
    <a href={link} target="_blank" rel="noopener noreferrer">
      <img src="/google-play-badge.png" alt={linkText} width="200" class="h-auto" />
      <span class="sr-only">{linkText}</span>
    </a>
  </div>
</div>

<style lang="scss">
  @use '../assets/scss/base/mixins' as *;

  .call-to-action {
    position: relative;
    background-image: linear-gradient(
      315deg,
      light-dark(var(--color-primary-100), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-100), var(--color-primary-200))
    );

    color: var(--color-neutral-900);
  }

  /* Use the official Google Play badge without custom button styling */
</style>

---
/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * Source for the WebM video
   */
  srcWebm?: string
  /**
   * Source for the MP4 video
   */
  srcMp4?: string
}

const { srcWebm = '/demo.webm', srcMp4 = '/demo.mp4' }: Props = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <slot>Loot, die, repeat — a fast mobile roguelite.</slot>
        </h1>
        <p class="text-center text-xl md:text-left">
          Casual · Offline play · No ads · 100% open-source
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a href="https://play.google.com/store/apps/details?id=com.thomaspeissl.quick_dungeon_crawler_od.twa" target="_blank" rel="noopener noreferrer">
            <img src="/google-play-badge.png" alt="Get it on Google Play" width="200" class="h-auto" />
          </a>
        </div>
        <video
          class="block w-full max-w-xs mt-8 lg:hidden"
          autoplay
          muted
          loop
          playsinline
          width="400"
          height="300"
        >
          <source src={srcWebm} type="video/webm" />
          <source src={srcMp4} type="video/mp4" />
        </video>
      </div>
      <video
        class="hidden lg:block"
        autoplay
        muted
        loop
        playsinline
        width="536"
        height="687"
      >
        <source src={srcWebm} type="video/webm" />
        <source src={srcMp4} type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

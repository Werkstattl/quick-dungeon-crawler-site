---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const blog = await getCollection('blog')

  return blog.map((post, index) => {
    return {
      params: { post: post.id },
      props: { post: blog[index] },
    }
  })
}

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const { Content } = await render(post)

const author = {
  name: 'by ' + post.data.author,
  image: '/default-author-image.png',
  bio: 'developer @ Werkstattl',
}
---

<DefaultLayout title={post.data.title} description={post.data.description} url={post.data.title}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    author={author}
    bgType="bordered"
    featuredImage={post.data.cover}
    featuredImageAlt={post.data.coverAlt}
    date={post.data.date}
  />
  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
  <section class="my-12">
    <div class="narrow space-content container">
      <h2>Share this post</h2>
      <p>Like this post? Share it with your network!</p>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .narrow {
    margin-inline: auto;
    max-width: 65ch;
  }
</style>
